<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.NLM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/primary_text</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Other colors -->
        <item name="colorError">@color/error_color</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <!-- Custom button styles -->
    <style name="CustomMaterialButton" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Custom card style -->
    <style name="CustomCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Text styles -->
    <style name="HeadlineText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SubheadText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Chip styles -->
    <style name="CustomChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/primary_color</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Progress bar style -->
    <style name="CustomProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/primary_color</item>
        <item name="trackColor">@color/surface_color</item>
        <item name="trackCornerRadius">4dp</item>
    </style>
</resources>